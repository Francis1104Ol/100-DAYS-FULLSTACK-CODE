  { userId: 2, item: "Keyboard", price: 100, quantity: 2, category: "Accessories" },
  { userId: 1, item: "Mouse", price: 25, quantity: 3, category: "Accessories" },
  { userId: 3, item: "Monitor", price: 300, quantity: 1, category: "Electronics" }
]);